@model ExaminationSystemTT.DAL.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<h1>Create Course</h1>

<h4>Enter Course Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @* Adjust column width as needed *@
        <form asp-action="Create">
            @* Shows model-level errors (not tied to a specific property) *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @* Shows errors specific to the Name property *@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@* Include client-side validation scripts (jQuery Unobtrusive Validation) *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}