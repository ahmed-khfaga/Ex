@model ExaminationSystemTT.DAL.Models.Exam

@{
    ViewData["Title"] = "Delete Exam";
}

<h1>Delete Exam</h1>

<h3 class="text-danger">Are you sure you want to delete this exam?</h3>
<p class="text-danger">Warning: Deleting the exam may also delete associated questions and student answers depending on database settings.</p>

<div>
    <h4>Exam Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Exam ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ExamId)</dd>
        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@Model.Course?.Name</dd> @* Use ?. for safety *@
        <dt class="col-sm-3">Instructor</dt>
        <dd class="col-sm-9">@(Model.Instructor?.FirstName) @Model.Instructor?.LastName</dd> @* Use ?. for safety *@
        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>
        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExamId" /> @* Sends the ID of the exam to delete *@
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>