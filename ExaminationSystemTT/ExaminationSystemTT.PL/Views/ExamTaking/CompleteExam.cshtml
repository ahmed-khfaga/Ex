@{
    ViewData["Title"] = "Exam Completed";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Or your student-specific layout
    int examId = ViewBag.ExamId ?? 0; // Retrieve ExamId passed from the controller
}

<div class="container mt-5">
    <div class="card text-center shadow">
        <div class="card-header bg-success text-white">
            <h2>Exam Attempt Finished</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Thank You!</h5>
            <p class="card-text">You have completed your attempt for this exam.</p>
            <p class="card-text">Your answers have been recorded.</p>

            @* Optional: Add links for next steps *@
            <div class="mt-4">
                @* Link back to the Student Dashboard *@
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>

                @* Optional: Link to view results (if that feature exists) *@
                @*
                if (examId > 0)
                {
                    <a asp-controller="Results" asp-action="ViewExamResult" asp-route-examId="@examId" class="btn btn-info ms-2">View My Results</a>
                }
                *@
            </div>
        </div>
        <div class="card-footer text-muted">
            Completed on: @DateTime.Now.ToString("f")
        </div>
    </div>
</div>