@model IEnumerable<ExaminationSystem.DAL.Models.Instructor>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4 text-primary">👨‍🏫 Instructor Directory</h2>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow rounded-pill px-4">
            <i class="fas fa-plus me-2"></i> Create Instructor
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var instructor in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0 h-100 rounded-4">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-dark fw-semibold">
                                    <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>
                                    @instructor.FirstName @instructor.LastName
                                </h5>
                                <p class="text-muted small mb-1"><strong>Email:</strong> @instructor.Email</p>
                                <p class="text-muted small mb-1"><strong>Phone:</strong> @instructor.Phone</p>
                                <p class="text-muted small"><strong>Address:</strong> @instructor.Address</p>
                            </div>

                            <div class="d-flex justify-content-between mt-auto">
                                <a asp-action="Details" asp-route-id="@instructor.ID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@instructor.ID" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@instructor.ID" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5 rounded-4 shadow-sm p-4">
            <h5 class="mb-2"><i class="fas fa-exclamation-circle me-2"></i>No Instructors Available</h5>
            <p class="mb-0">Start by creating a new instructor using the button above.</p>
        </div>
    }
</div>
