@model ExaminationSystem.DAL.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h3 class="mb-0">❌ Delete Student</h3>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-danger fw-semibold">
                        Are you sure you want to delete this student?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>

                <div class="card-footer bg-light text-end rounded-bottom-4">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger px-4 fw-semibold">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-3 px-4">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
