@model IEnumerable<Student>

@{
    ViewData["Title"] = "Student Directory";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4 text-primary">🎓 Student Directory</h2>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow rounded-pill px-4">
            <i class="fas fa-plus me-2"></i> Add Student
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var student in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0 h-100 rounded-4">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-dark fw-semibold">
                                    <i class="fas fa-user-graduate me-2 text-primary"></i>@student.FirstName @student.LastName
                                </h5>
                                <p class="text-muted small mb-1">ID: @student.ID</p>
                                <p class="text-muted small mb-1">📧 @student.Email</p>
                                <p class="text-muted small">📍 @student.Address</p>
                            </div>

                            <div class="d-flex justify-content-between mt-auto">
                                <a asp-action="Details" asp-route-id="@student.ID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@student.ID" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@student.ID" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5 rounded-4 shadow-sm p-4">
            <h5 class="mb-2"><i class="fas fa-exclamation-circle me-2"></i>No Students Found</h5>
            <p class="mb-0">Click the "Add Student" button to create a new student profile.</p>
        </div>
    }
</div>
