@model Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-info text-white rounded-top-4">
                    <h3 class="mb-0">📄 Student Details</h3>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light border-0 text-end rounded-bottom-4">
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-success px-4 me-2">Edit</a>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
