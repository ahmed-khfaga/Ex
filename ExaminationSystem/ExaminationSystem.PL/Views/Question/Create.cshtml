@model ExaminationSystem.DAL.Models.Question

@{
    ViewData["Title"] = "Create Question";
}

<h2>Create Question</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="QuestionText">Question Text</label>
        <textarea asp-for="QuestionText" class="form-control" id="QuestionText" rows="3"></textarea>
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="QuestionType">Question Type</label>
        <select asp-for="QuestionType" class="form-control" id="QuestionType">
            <option value="MCQ">MCQ</option>
            <option value="True and False">True and False</option>
        </select>
        <span asp-validation-for="QuestionType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Mark">Mark</label>
        <input asp-for="Mark" class="form-control" id="Mark" />
        <span asp-validation-for="Mark" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CorrectTFAnswer">Correct Answer (True/False)</label>
        <div>
            <input type="radio" asp-for="CorrectTFAnswer" value="true" /> True
            <input type="radio" asp-for="CorrectTFAnswer" value="false" /> False
        </div>
        <span asp-validation-for="CorrectTFAnswer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ExamID">Exam</label>
        <select asp-for="ExamID" class="form-control" id="ExamID">
            @foreach (var exam in ViewBag.Exams as List<ExaminationSystem.DAL.Models.Exam>)
            {
                <option value="@exam.ID">@exam.Title</option>
            }
        </select>
        <span asp-validation-for="ExamID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<br />
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
