@model ExaminationSystem.PL.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Create New Question";
    var showMcq = Model.QuestionType == "MCQ" ? "block" : "none";
    var showTf = Model.QuestionType == "TF" ? "block" : "none";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h3 class="mb-0">Create New Question</h3>
                </div>

                <form asp-action="Create" method="post">
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Select Exam -->
                        <div class="mb-3">
                            <label asp-for="ExamID" class="form-label fw-semibold">Exam</label>
                            <select asp-for="ExamID" asp-items="ViewBag.ExamList" class="form-control form-control-lg">
                                <option value="">-- Select Exam --</option>
                            </select>
                            <span asp-validation-for="ExamID" class="text-danger"></span>
                        </div>

                        <!-- Question Text -->
                        <div class="mb-3">
                            <label asp-for="QuestionText" class="form-label fw-semibold">Question Text</label>
                            <textarea asp-for="QuestionText" class="form-control form-control-lg" rows="3"></textarea>
                            <span asp-validation-for="QuestionText" class="text-danger"></span>
                        </div>

                        <!-- Mark -->
                        <div class="mb-3">
                            <label asp-for="Mark" class="form-label fw-semibold">Mark</label>
                            <input asp-for="Mark" type="number" min="1" class="form-control form-control-lg" />
                            <span asp-validation-for="Mark" class="text-danger"></span>
                        </div>

                        <!-- Question Type -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Question Type</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="QuestionType" class="form-check-input" type="radio" value="MCQ" id="typeMcq" onclick="toggleFields()" checked />
                                    <label class="form-check-label" for="typeMcq">MCQ</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="QuestionType" class="form-check-input" type="radio" value="TF" id="typeTf" onclick="toggleFields()" />
                                    <label class="form-check-label" for="typeTf">True/False</label>
                                </div>
                            </div>
                            <span asp-validation-for="QuestionType" class="text-danger"></span>
                        </div>

                        <!-- True/False Panel -->
                        <div id="tfFields" class="mb-4 border rounded p-3" style="display: @showTf;">
                            <h5 class="fw-semibold">True / False Answer</h5>
                            <div class="form-check form-check-inline">
                                <input asp-for="CorrectTFAnswer" class="form-check-input" type="radio" value="true" id="tfTrue" />
                                <label class="form-check-label" for="tfTrue">True</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="CorrectTFAnswer" class="form-check-input" type="radio" value="false" id="tfFalse" />
                                <label class="form-check-label" for="tfFalse">False</label>
                            </div>
                            <span asp-validation-for="CorrectTFAnswer" class="text-danger d-block"></span>
                        </div>

                        <!-- MCQ Panel -->
                        <div id="mcqFields" class="mb-4 border rounded p-3" style="display: @showMcq;">
                            <h5 class="fw-semibold">Multiple Choice Answers</h5>
                            <p class="text-muted small mb-3">Enter four options and mark the correct one.</p>
                            @for (int i = 0; i < Model.Choices.Count; i++)
                            {
                                var letter = (char)('A' + i);
                                <div class="row mb-3 align-items-center">
                                    <div class="col-9">
                                        <label asp-for="Choices[i].ChoiceText" class="form-label fw-semibold">
                                            Choice @letter
                                        </label>
                                        <input asp-for="Choices[i].ChoiceText" class="form-control form-control-lg" placeholder="Enter option @letter" />
                                        <span asp-validation-for="Choices[i].ChoiceText" class="text-danger"></span>
                                    </div>
                                    <div class="col-3 text-center">
                                        <div class="form-check mt-4">
                                            <input asp-for="Choices[i].IsCorrect" class="form-check-input" type="radio" name="correctChoice" value="@i" id="correct@i" />
                                            <label class="form-check-label" for="correct@i">Correct</label>
                                        </div>
                                    </div>
                                </div>
                            }
                            <span asp-validation-for="Choices" class="text-danger d-block"></span>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 text-end rounded-bottom-4">
                        <input type="submit" value="Create" class="btn btn-primary px-4" />
                        <a asp-action="Index" class="btn btn-outline-primary ms-3 px-4">← Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleFields() {
          var mcq = document.getElementById('mcqFields');
          var tf  = document.getElementById('tfFields');
          if (document.getElementById('typeMcq').checked) {
            mcq.style.display = 'block';
            tf.style.display  = 'none';
          } else {
            mcq.style.display = 'none';
            tf.style.display  = 'block';
          }
        }
    </script>
}
