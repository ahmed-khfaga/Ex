@model ExaminationSystem.DAL.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h3 class="mb-0">Edit Course</h3>
                </div>

                <form asp-action="Edit" method="post">
                    <div class="card-body p-4">
                        <input type="hidden" asp-for="ID" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Course Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InstructorID" class="form-label fw-semibold">Instructor</label>
                            <select asp-for="InstructorID" class="form-select form-select-lg" asp-items="ViewBag.InstructorList">
                                <option value="">-- Select Instructor --</option>
                            </select>
                            <span asp-validation-for="InstructorID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreationDate" class="form-label fw-semibold">Creation Date</label>
                            <input asp-for="CreationDate" type="datetime-local" class="form-control form-control-lg"
                                   value="@Model.CreationDate.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="CreationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 text-end rounded-bottom-4">
                        <input type="submit" value="Update" class="btn btn-success px-4" />
                        <a asp-action="Index" class="btn btn-outline-success ms-3 px-4">← Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
