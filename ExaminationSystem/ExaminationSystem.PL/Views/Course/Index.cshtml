@model IEnumerable<ExaminationSystem.DAL.Models.Course>

@{
    ViewData["Title"] = "Course Directory";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4 text-primary">📘 Course Directory</h2>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow rounded-pill px-4">
            <i class="fas fa-plus me-2"></i> Create Course
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0 h-100 rounded-4">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-dark fw-semibold">
                                    <i class="fas fa-book-open me-2 text-primary"></i>@course.Name
                                </h5>
                                <p class="text-muted small mb-1"><strong>Course ID:</strong> @course.ID</p>
                                <p class="text-muted small mb-1">
                                    <strong>Instructor:</strong>
                                    @course.Instructor?.FirstName @course.Instructor?.LastName
                                </p>
                                <p class="text-muted small"><strong>Created On:</strong> @course.CreationDate.ToString("MMMM dd, yyyy")</p>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Details" asp-route-id="@course.ID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@course.ID" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@course.ID" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5 rounded-4 shadow-sm p-4">
            <h5 class="mb-2"><i class="fas fa-exclamation-circle me-2"></i>No Courses Available</h5>
            <p class="mb-0">Click “Create Course” to add your first one.</p>
        </div>
    }
</div>
