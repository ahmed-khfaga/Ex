@model ExaminationSystem.DAL.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h3 class="mb-0">❌ Delete Course</h3>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning fw-semibold">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this course? This action cannot be undone.
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Course ID</dt>
                        <dd class="col-sm-8">@Model.ID</dd>

                        <dt class="col-sm-4 fw-semibold">Course Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-semibold">Instructor</dt>
                        <dd class="col-sm-8">
                            @if (Model.Instructor != null)
                            {
                                @Model.Instructor.FirstName @Model.Instructor.LastName
                            }
                            else
                            {
                                <span class="text-muted">— not assigned —</span>
                            }
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Creation Date</dt>
                        <dd class="col-sm-8">@Model.CreationDate.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <div class="text-end">
                            <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-3 px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
